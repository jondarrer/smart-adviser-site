{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/about",
        "destination": "/__about.html"
      },
      {
        "source": "/ro",
        "destination": "/__ro.html"
      },
      {
        "source": "/ro/despre",
        "destination": "/__ro_despre.html"
      },
      {
        "source": "**",
        "destination": "/__index.html"
      }
    ]
  }
}
