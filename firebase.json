{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/despre",
        "destination": "/__despre.html"
      },
      {
        "source": "/en",
        "destination": "/__en.html"
      },
      {
        "source": "/en/about",
        "destination": "/__en_about.html"
      },
      {
        "source": "/en/attributions",
        "destination": "/__en_attributions.html"
      },
      {
        "source": "!/@(js|css|jpg|png|txt)/**",
        "destination": "/__index.html"
      }
    ]
  }
}