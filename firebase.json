{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/about",
        "destination": "/__about.html"
      },
      {
        "source": "/attributions",
        "destination": "/__attributions.html"
      },
      {
        "source": "/ro",
        "destination": "/__ro.html"
      },
      {
        "source": "/ro/despre",
        "destination": "/__ro_despre.html"
      },
      {
        "source": "/v-next",
        "destination": "/__v-next.html"
      },
      {
        "source": "/v-next/despre",
        "destination": "/__v-next_despre.html"
      },
      {
        "source": "/v-next/en",
        "destination": "/__v-next_en.html"
      },
      {
        "source": "/v-next/en/about",
        "destination": "/__v-next_en_about.html"
      },
      {
        "source": "/v-next/en/attributions",
        "destination": "/__v-next_en_attributions.html"
      },
      {
        "source": "!/@(js|css|jpg|png|txt)/**",
        "destination": "/__index.html"
      }
    ]
  }
}
